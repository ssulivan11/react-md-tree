{
    "name": "react-md-tree",
    "version": "1.0.0",
    "description": "Markdown directory tree generator.",
    "main": "dist/bundle.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/ssulivan11/react-md-tree.git"
    },
    "bin": {
        "md-tree": "./bin/cli.js"
    },
    "scripts": {
        "-- DEV ---------------------------------------": "",
        "dev": "webpack --watch",
        "build": "webpack",
        "start": "node dist/bundle.js",
        "-- OTHER -------------------------------------": "",
        "lint": "eslint '*/**/*.{js,ts,tsx}' --fix",
        "format": "prettier --write .",
        "prepublishOnly": "npm run build",
        "test": "jest --coverage",
        "test:watch": "jest --watch"
    },
    "husky": {
        "hooks": {
            "pre-commit": "pretty-quick --staged"
        }
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "prettier --write",
            "git add"
        ],
        "*.{json,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "devDependencies": {
        "@babel/core": "^7.12.10",
        "@babel/preset-env": "^7.12.0",
        "@babel/preset-typescript": "^7.12.0",
        "@testing-library/dom": "^7.29.0",
        "@testing-library/jest-dom": "^5.11.6",
        "@testing-library/react": "^11.2.2",
        "@types/jest": "^26.0.19",
        "@types/react": "^16.9.17",
        "@types/react-dom": "^16.9.4",
        "@typescript-eslint/eslint-plugin": "^4.1.0",
        "@typescript-eslint/parser": "^4.1.0",
        "babel-loader": "^8.2.2",
        "clean-webpack-plugin": "^3.0.0",
        "eslint": "^7.16.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.4",
        "husky": "^4.3.6",
        "jest": "^26.6.3",
        "lint-staged": "^10.5.3",
        "prettier": "^2.2.1",
        "pretty": "^2.0.0",
        "pretty-quick": "^3.1.0",
        "terser-webpack-plugin": "^5.0.3",
        "ts-jest": "^26.4.4",
        "ts-loader": "^8.0.12",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3",
        "webpack": "^5.11.0",
        "webpack-cli": "^4.2.0",
        "webpack-node-externals": "^2.5.2"
    },
    "dependencies": {
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "commander": "^6.2.1"
    }
}
